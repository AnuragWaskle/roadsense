{
  "expo": {
    "name": "RoadSense",
    "slug": "roadsense",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#0f172a"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.roadsense.app",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "RoadSense needs your location to detect and map road anomalies.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "RoadSense needs your location to detect and map road anomalies.",
        "NSMotionUsageDescription": "RoadSense uses motion sensors to detect potholes and speed bumps."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0f172a"
      },
      "package": "com.roadsense.app",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "VIBRATE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router"
    ],
    "scheme": "roadsense"
  }
}